<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BrdMenu" TargetType="Border">
        <!-- Bordinha de baixo -->
        <Setter Property="BorderBrush" Value="#FF20C5C5"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="BrdTituloTelas" TargetType="Border">
        <!-- Borda do Título Produtos -->
        <Setter Property="BorderBrush" Value="#032338" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>


</ResourceDictionary>